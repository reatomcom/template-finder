extends partials/layout

//- Override default config variables
append config
  - var parentMenu = 'Pages'
  - var pageTitle = 'Real Estate | Help Center'
  - var bodyClass = 'fixed-bottom-btn'

//- Navbar
block navbar
  include partials/navbar-real-estate

//- Page Content
block content

  // Breadcrumb
  .container.mt-5.mb-md-4.pt-5
    nav(aria-label='breadcrumb').mb-3.pt-md-3
      ol.breadcrumb
        li.breadcrumb-item
          a(href='real-estate-home-v1.html') Home
        li(aria-current='page').breadcrumb-item.active
          | Help center


  // Page header
  section.container.mb-4.pb-lg-5
    h1(style='max-width: 856px;').mx-auto.mb-4.pb-2.text-center
      | Hi, how can we help?

    // Search form
    form.form-group.mb-4
      .input-group.input-group-lg
        input(type='text' placeholder='What are you looking for?').form-control
      button(type='submit').btn.btn-primary.btn-lg.px-sm-4.px-3
        i.fi-search.me-sm-2
        span.d-sm-inline.d-none Search

    .d-flex.flex-md-row.flex-column.align-items-md-center
      .pb-2.mb-2.me-2.flex-shrink-0.fw-bold
        | Popular sections:
      .text-nowrap.overflow-auto.pb-2
        div
          a(href='#').btn.btn-xs.btn-outline-secondary.rounded-pill.fw-normal.mb-2.me-2
            | Notifications
          a(href='#').btn.btn-xs.btn-outline-secondary.rounded-pill.fw-normal.mb-2.me-2
            | Getting started
          a(href='#').btn.btn-xs.btn-outline-secondary.rounded-pill.fw-normal.mb-2.me-2
            | Transactions
          a(href='#').btn.btn-xs.btn-outline-secondary.rounded-pill.fw-normal.mb-2.me-2
            | Account questions
          a(href='#').btn.btn-xs.btn-outline-secondary.rounded-pill.fw-normal.mb-2.me-2
            | Mortgage
          a(href='#').btn.btn-xs.btn-outline-secondary.rounded-pill.fw-normal.mb-2.me-2
            | Guides


  // Page content
  section.container.mb-md-5.mb-4.pb-lg-5
    .row

      // Sidebar offcanvas
      aside.col-xl-2.col-lg-3
        #help-sidebar.offcanvas-lg.offcanvas-start
          .offcanvas-header.shadow-sm.mb-2
            h2.h5.mb-0 FAQ
            button(type='button' data-bs-dismiss='offcanvas' data-bs-target='#help-sidebar').btn-close
          .offcanvas-body
            ul(class='nav nav-tabs navbar-nav flex-column m-0 text-lg-center')
              li.nav-item.px-0
                a(href='#' class='nav-link active').px-3
                  | Renters &amp; Rentals
              li.nav-item.px-0
                a(href='#' class='nav-link').px-3
                  | Property Buyers
              li.nav-item.px-0
                a(href='#' class='nav-link').px-3
                  | Property Owners
              li.nav-item.px-0
                a(href='#' class='nav-link').px-3
                  | Mortgages
              li.nav-item.px-0
                a(href='#' class='nav-link').px-3
                  | Mobile&nbsp;App&nbsp;Questions

